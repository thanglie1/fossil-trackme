<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_55"
    android:orientation="vertical"
    android:paddingTop = "4dp"
    android:paddingBottom = "4dp"
    android:paddingLeft = "10dp"
    android:paddingRight = "10dp">

    <TextView
        android:id="@+id/txt_record_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="@dimen/text_size_super_big"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_str_record_avg_speed"
                android:layout_width="match_parent"
                android:text="@string/avg_speed"
                android:textAlignment="center"
                android:textColor="@color/green_52"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_record_avg_speed"
                android:layout_width="match_parent"
                android:textColor="@color/green_52"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_str_record_distance"
                android:layout_width="match_parent"
                android:text="@string/distance"
                android:textColor="@color/green_52"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_record_distance"
                android:layout_width="match_parent"
                android:text="@string/distance"
                android:textColor="@color/green_52"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_str_record_duration"
                android:layout_width="match_parent"
                android:text="@string/duration"
                android:textAlignment="center"
                android:textColor="@color/green_52"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_record_duration"
                android:layout_width="match_parent"
                android:text="@string/duration"
                android:textColor="@color/green_52"
                android:textSize="@dimen/text_size_big"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>